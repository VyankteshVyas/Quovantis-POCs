@model MVC_CRUD_Operations.Models.Userpswd;

<form method="post" asp-action="Login">
    <div class="border p-3">

        <div class="form-group row">
            <h2 class="text-info pl-3">Login</h2>
        </div>
        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="username"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="username" class="form-control" />
                    </div>

                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="pswd"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="pswd" class="form-control" />
                    </div>

                </div>
                <div class="form-group row">
                    <div class="col-8 offset-4 row">

                        <div class="col">
                            <input type="submit" class="btn btn-info w-100" value="Login" />
                        </div>
                        
                    </div>
                </div>
            </div>
            <div class="col-4">
                @* Keep this empty *@
            </div>
        </div>
    </div>

</form>
